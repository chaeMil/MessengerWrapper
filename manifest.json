{
  "manifest_version": 2,
  "name": "Messenger",
  "short_name": "Messenger",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/icon-128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  
  "permissions": ["storage", "alarms", "notifications", "audioCapture", "videoCapture", "browser", "webview", "unlimitedStorage", "http://messenger.com/*", "https://messenger.com/*"]

}
